
{% extends 'layouts/app.twig' %}

{% block content %}

    <div class="section">
        <div class="container">
            <div class="column is-4 is-offset-4">
                <h3 class="title has-text-centered">
                    Recover your password
                </h3>
                {% include 'components/status.twig' %}
                <form action="{{url_for('auth.password.recover')}}" method="post">
                    {{ csrf() | raw}}
                    <div class="field">
                        <label class="label">Email</label>
                        <div class="control">
                            <input class="input{{ errors.email ? ' is-danger' : '' }}" type="text" name="email" placeholder="e.g mike@mobimmo.com">
                        </div>
                        {% if errors.email %}
                            <p class="help is-danger">
                                {{ errors.email | first }}
                            </p>
                        {% endif %}
                    </div>
                    <div class="control">
                        <button type="submit" class="button is-info">
                           Recover
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}