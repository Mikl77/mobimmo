{% extends 'layouts/app.twig' %}
{% block main_content %}
    <section class="headings">
        <div class="text-heading text-center">
            <div class="container">
                <h1>Récupération mot de passe</h1>
                <h2><a href="{{ url_for('home') }}">Home </a> &nbsp;/&nbsp; Recover</h2>
            </div>
        </div>
    </section>
    <!-- END SECTION HEADINGS -->
    <!-- START SECTION LOGIN -->
    <div id="login">
        <div class="login">
            {% include 'components/status.twig' %}
            <form action="{{url_for('auth.password.recover')}}" method="post">
                {{ csrf() | raw}}
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" class="form-control{{ errors.email ? ' is-invalid' : '' }}" name="email" id="email" placeholder="e.g mike@mobimmo.com">
                    <i class="icon_mail_alt"></i>
                    {% if errors.email %}
                        <div class="invalid-feedback"> {{ errors.email | first }}
                        </div>
                    {% endif %}
                </div>
                <button type="submit" class="btn_1 rounded full-width">
                   Récupérer mot de passe
                </button>
            </form>
        </div>
    </div>


{% endblock %}